<%- include('./parts/head.ejs', {title: 'Authorization'}) %>
<body>
<div class="bg full-screen">
    <div class="container rounded">
        <form action="login" class="mt-5" method="post">
            <h1 class="pt-5 text-center">Sign in</h1>
            <div class="row">
                <div class="offset-md-4 col-4 offset-md-4">
                    <input class="form-control" type="text" id="login" name="login" placeholder="Login" required value="<%= username %>">
                    <div id="login-error" class="form-control-feedback text-danger"><%= errorMessage %></div>
                </div>
            </div>
            <div class="row">
                <div class="offset-md-4 col-4 offset-md-4">
                    <input class="form-control" type="password" id="password" name="password" placeholder="Password" required>
                </div>
            </div>
            <div class="row">
                <div class="offset-md-4 col-4 offset-md-4 mt-2">
                    <button class=" btn btn-primary btn-block">Log in</button>
                </div>
            </div>
        </form>
        <div class="mt-2 row">
            <div class="offset-md-4 col-4 offset-md-4">
                <a style="color:white" class=" btn btn-success btn-block" href="/registration">Create account</a>
            </div>
        </div>
        <br>
        <br>
        <br>
    </div>
</div>
<%- include('./parts/foot.ejs') %>